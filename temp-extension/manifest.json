{
  "manifest_version": 2,
  "name": "UrlNest",
  "version": "0.1",
  "description": "Save and open currently opened tabs",
  "icons": {
    "128": "icon128.png",
    "64": "icon64.png",
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "https://mail.google.com/*",
    "http://*/*, https://*/*"
  ]
}
